# Baseline text handling
* text=auto

# Explicit LF for common source and config files
*.py     text eol=lf
*.sh     text eol=lf
*.md     text eol=lf
*.txt    text eol=lf
*.csv    text eol=lf
*.json   text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.ini    text eol=lf
*.cfg    text eol=lf
requirements.txt text eol=lf

#  Mark non-text formats as binary
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.pdf    binary
*.docx   binary
*.ipynb  binary
*.SAFE/** binary

# Geospatial / remote-sensing formats
*.tif filter=lfs diff=lfs merge=lfs -text
*.tiff filter=lfs diff=lfs merge=lfs -text
*.jp2 filter=lfs diff=lfs merge=lfs -text
*.nc filter=lfs diff=lfs merge=lfs -text
*.h5 filter=lfs diff=lfs merge=lfs -text

# Export rules (git archive)
docs/_build/** export-ignore
site/**       export-ignore

# Hint to GitHub Linguist that built docs are generated.
docs/_build/** linguist-generated

# Large File Storage (LFS) tracking
*.tif   filter=lfs diff=lfs merge=lfs -text
*.tiff  filter=lfs diff=lfs merge=lfs -text
*.jp2   filter=lfs diff=lfs merge=lfs -text
*.nc    filter=lfs diff=lfs merge=lfs -text
*.h5    filter=lfs diff=lfs merge=lfs -text
*.SAFE/** filter=lfs diff=lfs merge=lfs -text
*.pdf   filter=lfs diff=lfs merge=lfs -text

